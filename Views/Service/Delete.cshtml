@{
    ViewData["Title"] = "Delete Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h2 class="mb-4 text-center">@ViewData["Title"]</h2>
            <form method="post" asp-action="Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" name="ServiceId" value="@Model.ServiceId" />
                <p class="mb-4 text-center">Are you sure you want to delete <strong>@Model.Name</strong>?</p>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-dark">Delete</button>
                    <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div> 