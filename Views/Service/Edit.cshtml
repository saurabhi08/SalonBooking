@{
    ViewData["Title"] = "Edit Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h2 class="mb-4 text-center">@ViewData["Title"]</h2>
            <form method="post" asp-action="Edit">
                @Html.AntiForgeryToken()
                <input type="hidden" name="ServiceId" value="@Model.ServiceId" />
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" name="Name" value="@Model.Name" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <input type="text" class="form-control" name="Description" value="@Model.Description" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input type="number" class="form-control" name="Price" value="@Model.Price" step="0.01" required />
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div> 