@model IEnumerable<SalonBookingApp.Models.Appointment>
@{
    ViewData["Title"] = "Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-dark">Book New Appointment</a>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle shadow-sm">
            <thead class="table-dark">
                <tr><th>Date</th><th>Customer</th><th>Stylist</th><th>Service</th><th>Actions</th></tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToString("g")</td>
                    <td>@item.CustomerId</td>
                    <td>@item.StylistId</td>
                    <td>@item.ServiceId</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AppointmentId" class="btn btn-outline-dark btn-sm me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.AppointmentId" class="btn btn-outline-dark btn-sm">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div> 